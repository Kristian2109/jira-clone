{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TypeScript",
      "program": "${workspaceFolder}/dist/index.js", // Path to your compiled JavaScript entry file // Task for building TypeScript files
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"], // Path to compiled JavaScript files
      "internalConsoleOptions": "neverOpen" // Hide the internal console
    }
  ]
}
